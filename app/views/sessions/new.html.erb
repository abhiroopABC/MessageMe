<h2 class="ui center aligned header">Welcome to MessageMe - a complete Chat App</h2>
<h4 class="ui center aligned tiny icon header">
  <i class="circular power off icon"></i>
  Log in to continue
</h4>
<div class="ui placeholder segment">
  <div class="ui two column very relaxed stackable grid">
    <div class="column">
      <%= form_for(:session, html: {class: "ui form", role: "form", method: :post}, url: login_path) do |f| %>
        <div class="field">
          <%= f.label :username, "Username"%>
          <div class="ui left icon input">
            <%= f.text_field :username, placeholder: "Username" %>
            <i class="user icon"></i>
          </div>
        </div>
        <div class="field">
          <%= f.label :password, "Password" %>
          <div class="ui left icon input">
            <%= f.text_field :password, placeholder: "Password", type: "password" %>
            <i class="lock icon"></i>
          </div>
        </div>
        <button class="ui orange submit button">Login</button>
      <% end %>
    </div>
    <div class="middle aligned column">
      <div class="ui big orange button">
        <i class="signup icon"></i>
        Sign Up
      </div>
    </div>
  </div>
  <div class="ui vertical divider">
    Or
  </div>
</div>